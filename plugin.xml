<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-my-speed"
		version="1.0.0"
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns="http://apache.org/cordova/ns/plugins/1.0">
	<name>MySpeed</name>
	<js-module name="MySpeed"
			   src="www/MySpeed.js">
		<clobbers target="cordova.plugins.MySpeed" />
	</js-module>
	<platform name="ios">
		<config-file parent="/*"
					 target="config.xml">
			<feature name="MySpeed">
				<param name="ios-package"
					   value="MySpeed" />
			</feature>
		</config-file>
		<source-file src="src/ios/MySpeed.swift"/>
	</platform>
	<platform name="android">
		<config-file target="res/xml/config.xml" parent="/*">
			<feature name="MySpeed">
				<param name="android-package" value="com.plugin.myspeed.MySpeed"/>
			</feature>
		</config-file>
		<source-file src="src/android/MySpeed.java" target-dir="src/com/plugin/myspeed" />
		<source-file src="src/android/SpeedLocationListener.java" target-dir="src/com/plugin/myspeed" />
		<framework src="src/android/build.gradle" custom="true" type="gradleReference" />
	</platform>
</plugin>
